{% extends 'base.html.twig' %}

{% block main %}
    <div class="container">
        <div class="row">
            <div class="col-xs-12 col-md-12">
                <h1>Inscription</h1>
                {{ form_start(form) }}
                    {{ form_row(form.email) }}
                    {{ form_row(form.plainPassword.first, {
                        'label' : 'Votre mot de passe'
                    }) }}
                    {{ form_row(form.plainPassword.second, {
                        'label' : 'Répéter votre mot de passe'
                    }) }}
                    <button type="submit" class="btn" formnovalidate>S'inscrire</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
