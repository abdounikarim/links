{% extends 'base.html.twig' %}

{% block title %}Accueil {% endblock %}
{% block main %}
    <div id="main">
        <div class="inner">
            <header>
                <h1>Liens utiles</h1>
            </header>
            <section class="tiles">
                {% for path in paths %}
                <article class="{{ "style%s"|format(path.id) }}">
                    <span class="image">
                        <img src="{{ asset(image_link ~ '/' ~path.image.name) }}">
                    </span>
                    <a href="dwj.html">
                        <h2>{{ path.name }}</h2>
                        <div class="content">
                            <p>{{ path.description }}</p>
                        </div>
                    </a>
                </article>
                {% endfor %}
            </section>
        </div>
    </div>
{% endblock %}

